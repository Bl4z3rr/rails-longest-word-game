<div class="container">
  <h1>Games#new</h1>
  <p>Find me in app/views/games/new.html.erb</p>
  <br>
  <br>
  <br>
  <br>
  <h2>New Game</h2>
  <ul>
    <% @letters.each do |letter| %>
      <li> <%= letter %></li>
    <% end %>
  </ul>
  <br>
  <form id="form" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

    <input id="word" type="text" name="word" placeholder="Word">
    <input id="button" type="submit">
  </form>
</div>
